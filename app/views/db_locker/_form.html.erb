<%= form_for @db_locker, :html => { :class => "form-horizontal db_locker" } do |f| %>

  <% if @db_locker.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@db_locker.errors.count, "error") %> prohibited this db_locker from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @db_locker.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :is_locked, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :is_locked, :class => 'form-control' %>
    </div>
    <%=f.error_span(:is_locked) %>
  </div>
  <div class="form-group">
    <%= f.label :lock_time, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :lock_time, :class => 'form-control' %>
    </div>
    <%=f.error_span(:lock_time) %>
  </div>
  <div class="form-group">
    <%= f.label :locked_by, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :locked_by, :class => 'form-control' %>
    </div>
    <%=f.error_span(:locked_by) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                db_lockers_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
